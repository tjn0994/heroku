<div class="background_word">
  <div class="row padding_top_10px">
    <div class="col-md-4 col-md-offset-1 course_lesson">
    <%= @lesson.course.name%> > <%= @lesson.name %>
    </div>
  </div>
  <br/>
  <br/>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <table class="table table-hover background_white">
        <thead>
          <tr class="caption_first">
            <th>name</th>
            <th>meaning</th>
          </tr>
        </thead>
        <tbody>
          <% @words.each  do |word| %>
          <tr>
            <td> <%= word.name %> </td>
            <td> <%= word.meaning %> </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= will_paginate %>
    </div>
  </div>
</div>
