<%= link_to current_user do %>
  <% if current_user.avatar? %>
    <span class="avatar">
      <%= image_tag current_user.avatar, size: Settings.size_user_show %>
    </span>
  <% else %>
    <%= gravatar_for current_user, size: Settings.size_user_show %>
  <% end %>
<% end %>
<h1><span class="user_show"><%= current_user.name %></span></h1>
<span><%= link_to "view my profile", current_user %></span>
